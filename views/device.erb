<% locals[:title] = device_name %>

<% if device.class == Device %>
  <div class='pxl-minibar-wrapper pxl-fadescroll'>
    <div class='pxl-minibar'>
      <span class='pxl-minibar-span'>IP: <b><%= device.poll_ip %></b></span>
      <span>Hardware:
        <span data-toggle='tooltip' data-rel='tooltip-bottom'
          title='<%= sw_tooltip(device) %>' class='tooltip-lighter'>
          <u><b><%=
          device.vendor.gsub(/Force10 [\w\-]+/,'Force10') +
            ' ' << device.hw_model
            %></b></u>
        </span>
      </span>
      <span>Uptime: <b><%= humanize_time(device.uptime)%></b></span>
      <span>Pushing:
        <span data-toggle='tooltip' data-rel='tooltip-bottom' class='tooltip-lighter'
          title='<%= number_to_human(device.pps_out, units: :pps) %>'>
          <u><b><%= number_to_human(device.bps_out, units: :bps) %></b></u>
        </span>
      </span>
    </div>
  </div>
<% end %>

<h1 class='pxl-h1-device'><%= device_name %></h1>
<% if device.class == Device %>
  <h5 class='pxl-h5-device'>
    <%= device_link_graph(settings, device.name, '[ graphs ]') %>&nbsp;
    <a href='#' data-toggle="modal" data-target="#deviceDetails">[ details ]</a>&nbsp;
    <a href='#' data-toggle="modal" data-target="#deviceHardware">[ hardware ]</a>
  </h5>
  <div class='row'>
    <div class='col-md-6'>
      <div class="panel panel-grey">
        <div class="panel-heading">
          <div class="row">
            <div>
              <center>
                <span>CPU Utilization</span>
              </center>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class='pxl-rickshaw-y'></div>
          <div class='pxl-rickshaw' data-pxl-device='<%= device.name %>' data-pxl-attr='cpu' data-pxl-time='60m'></div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <div class='col-md-6'>
      <div class="panel panel-grey">
        <div class="panel-heading">
          <div class="row">
            <div>
              <center>
                <span>Memory Utilization</span>
              </center>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div class='pxl-rickshaw-y'></div>
          <div class='pxl-rickshaw' data-pxl-device='<%= device.name %>' data-pxl-attr='memory' data-pxl-time='60m'></div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class='row'>
  <% if device.class == Device && device.interfaces.size > 0 %>
    <table id='ifTable' class='table table-hover table-condensed tablesorter'>
    <thead>
      <tr>
        <th class='pxl-hidden'>Total</th>
        <th colspan='2' class='pxl-sort'>Name <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
        <th class='pxl-sort'>Type  <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
        <th class='pxl-sort'>Neighbor <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
        <th class='pxl-sort'>Ingress <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
        <th class='pxl-sort'>Egress <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
        <th class='pxl-sort'>Speed <span class='glyphicon glyphicon-sort pxl-sort-icon pxl-hidden'></span></th>
      </tr>
    </thead>
    <tbody>
    <% device.interfaces.values.each do |int| %>
      <% parent = device.get_interface(name: int.parent_name) %>
      <% children = device.get_children(parent_name: int.name) %>
      <tr <%= tr_attributes(int, parent, hide_if_child: true, hl_relation: true) %>>
        <td class='pxl-hidden'><%= total_bps_cell(int, parent) %></td>
        <td class='pxl-td-shrink'><%= interface_link(settings, int) %></td>
        <td><table class='pxl-linkUp pxl-linkUp-<%= link_status_color(int, children) %>'><tr>
              <td data-toggle='tooltip' data-container='body' title='<%= link_status_tooltip(int, children) %>' data-rel='tooltip-right'></td>
          </tr></table></td>
        <td class='<%= 'pxl-child-td' if parent %>'>
          <%= int.type %>
          <% if children.size > 0 %>
            <button type='button' class='swapPlusMinus btn btn-default btn-xs' data-toggle='collapse' data-target='.<%= int.index %>_child'>
              <span class="glyphicon glyphicon-plus"></span>
            </button>
          <% elsif parent %>
            <span class='pxl-hidden'><%= "[#{parent.name}]" %></span>
          <% end %>
        </td>
        <td><%= neighbor_link(int) %></td>
        <td class='pxl-histogram pxl-meta' data-pxl-meta='<%= int.bps_util_in %>'><%= bps_cell(:in, int) %></td>
        <td class='pxl-histogram pxl-meta' data-pxl-meta='<%= int.bps_util_out %>'><%= bps_cell(:out, int) %></td>
        <td><%= speed_cell(int) %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% else # This means we don't have any interfaces, or the device doesn't exist %>
    <% error = device.class == Device ? 'Device found, but no interfaces are being recorded.' : 'Device not found.' %>
    <div class='col-md-2'></div>
    <div class='col-md-8'>
      <br \>
      <ul class='list-group'>
        <li class='center list-group-item list-group-item-danger'>
        <b><%= error %></b>
        </li>
      </ul>
    </div>
    <div class='col-md-2'></div>
  <% end %>
</div>

<% if device.class == Device %>
